<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="value"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="value"/>
            </tree>
        </field>
    </record>

    <!-- <menuitem id="menu_estate_root" name="Estate Management"/>

    <menuitem id="menu_estate_properties" name="Properties" parent="menu_estate_root" sequence="1"/>

    <menuitem id="menu_estate_property" name="Properties" parent="menu_estate_properties" action="action_estate_property"/> -->

    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
